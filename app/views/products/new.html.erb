<h2 class="product-title">¡La basura de uno es el tesoro de otro!</h2>
<div class="product-container">
  <div class="product-image-container">
    <!-- Aquí puedes poner la imagen del producto -->
    <%# <%= image_tag(@product.image_url, alt: @product.title, class: "product-image") if @product.image_url.present? %> %>
  </div>
  <%= form_with model: @product, local: true, class: "product-form" do |form| %>
    <div class="form-group">
      <%= form.label :title,"Título" ,class: "form-label" %>
      <%= form.text_field :title, class: "form-input" %>
    </div>
    <div class="form-group">
      <%= form.label :description,"Describelo" , class: "form-label" %>
      <%= form.text_area :description, class: "form-input" %>
    </div>
    <div class="form-group">
      <%= form.label :price,"ARS$" ,  class: "form-label" %>
      <%= form.number_field :price, class: "form-input" %>
    </div>
    <%= form.submit "Crear Producto", class: "form-submit" %>
  <% end %>
</div>
<%= link_to products_path, class: "back-link" do %>
  <h3>Volver</h3>
<% end %>
