<%= form_with(url: sessions_path) do |form| %>

  <div>
    <%= form.label :login %>
    <%= form.text_field :login, required: true %>
  </div>
  <div>
    <%= form.label :password%>
    <%= form.password_field :password, required: true %>
  </div>

  <div>
    <%= form.submit %>
  </div>
<% end %>

<%= link_to new_user_path do %>
  <h3 ><%= t('.register') %> </h3>
<% end unless Current.user %>
